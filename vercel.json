{
  "version": 2,
  "buildCommand": "npm run build",
  "builds": [
    {
      "src": "api/serverless.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "server/**",
          "shared/**",
          "attached_assets/**",
          "public/uploads/**"
        ]
      }
    },
    { "src": "dist/public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/serverless.ts" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/dist/public/index.html" }
  ]
}
