{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "functions": {
    "api/serverless.ts": {
      "includeFiles": [
        "server/**",
        "shared/**",
        "attached_assets/**",
        "public/uploads/**"
      ]
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/serverless" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
